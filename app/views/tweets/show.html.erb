<h3>Likes</h3>
<p>
  <% @tweet.likes.each do |like| %>
    <%= avatar_for(like.user, 70, 70) %>
  <% end %>
</p>

<% if current_user.id == @tweet.user_id %>
  <%= link_to 'Editar', edit_tweet_path(@tweet) %> |
  <%= link_to 'Borrar', tweet_path(@tweet.id), method: :delete %> |
<% end %>

<%= link_to 'Volver', tweets_path %>
