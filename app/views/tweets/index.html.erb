<% if user_signed_in? %>
  <%= link_to 'Cerrar Sesión', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Crear Cuenta', new_user_registration_path %>
  <%= link_to 'Iniciar Sesión', new_user_session_path %>
<% end %>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Foto del Usuario</th>
      <th>Tweet</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><img src="<%= tweet.user.profile_picture %>" style="width:50px; height:50px"></td>
        <td><%= tweet.content %></td>
        <td><%= tweet.likes.count %></td>
        <td><%= link_to 'Mostrar', tweet %></td>
        <td><%= link_to 'RT', tweet %></td>
        <% if user_signed_in? && tweet.user_id == current_user.id %>
          <td><%= link_to 'Editar', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Borrar', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
