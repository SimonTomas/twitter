<h2 class="text-center font-weight-bold">Edita tu cuenta</h2>
<hr class="container">

<div class="container my-5">
  <div class="row">
    <div class="col-6">
      <figure>
        <%= image_tag('logo-twitter.png', class: 'registration_img') %>
      </figure>
    </div>
    <div class="col-6">
      <div class="card d-flex justify-content-center p-5 font-weight-bold">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field form-group">
            <%= f.label 'Nombre de Usuario' %>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: 'Ingrese su nombre', class:'form-control' %>
          </div>

          <div class="field form-group">
            <%= f.label 'Foto de Perfil' %> <em class="font-weight-light">(Url)</em>
            <%= f.text_field :profile_picture, autofocus: true, autocomplete: "profile_picture", class:'form-control', placeholder: 'Opcional' %>
          </div>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group">
            <%= f.label "Nueva contraseña" %> <i class="font-weight-light">(Opcional)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Escribe tu nueva contraseña...' %>
          </div>

          <div class="field form-group">
            <%= f.label "Confirma tu nueva contraseña" %> <i class="font-weight-light">(Opcional)</i><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirma tu nueva contraseña...' %>
          </div>

          <div class="field form-group">
            <%= f.label 'Contraseña actual' %> <i class="font-weight-light">(Obligatorio)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: 'Escribe tu contraseña acutal...' %>
          </div>

          <div class="actions">
            <%= f.submit "Guardar Cambios", class:'submit-btn-registration' %>
          </div>

          <div class="actions mt-3">
            <%= link_to 'Volver', root_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col offset-6">
      <div class="card mt-5 p-5">
        <h3 class="font-weight-bold text-center">Borrar Cuenta <span><i class="fa fa-exclamation-triangle text-danger" aria-hidden="true"></i></span></h3>

        <p class="text-center mt-3">Si eliminas tu cuenta, perderás todos tus datos
        <div class="d-flex justify-content-center mt-2">
          <%= button_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class:'submit-btn-delete' %>
        </div>
        </p>

      </div>
    </div>
  </div>
</div>

