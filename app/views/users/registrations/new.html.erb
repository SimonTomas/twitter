<h2 class="text-center font-weight-bold">Crea tu cuenta</h2>

<div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label 'Nombre de Usuario' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: 'Ingrese su nombre' %>
    </div>
    
    <div class="field">
      <%= f.label 'Foto de Perfil' %>
      <%= f.text_field :profile_picture, autofocus: true, autocomplete: "profile_picture" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Ingrese su email' %>
    </div>

    <div class="field">
      <%= f.label 'Contraseña' %>
      <% if @minimum_password_length %>
      <em>(Mínimo <%= @minimum_password_length %> carácteres)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Ingrese su contraseña' %>
    </div>

    <div class="field">
      <%= f.label 'Reingrese su contraseña' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Ingrese su contraseña' %>
    </div>

    <div class="actions">
      <%= f.submit "Crear Cuenta" %>
    </div>

    <div class="actions">
      <%= link_to 'Volver', root_path %>
    </div>
  <% end %>
</div>
